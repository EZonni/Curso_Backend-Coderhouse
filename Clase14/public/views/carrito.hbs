<h2 style="margin: 25px;">Carrito de compras</h2>
{{#if emptyData}}
    <h4>No hay productos en el carrito</h4>
    {{else}}      
        {{#each productosCarrito}}
            <div class="card" style="width: 200px; margin: 25px">
                <img src="{{this.img}}" class="card-img-top" alt="..." style="height: 75px; width: 75px; margin: 15px">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">${{this.price}}</p>
                </div>
            </div>
        {{/each}}
{{/if}}