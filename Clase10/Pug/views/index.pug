html
    head
        title= "Entrega - Clase 10"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
    body
        h2(style='margin: 25px')= "Ingresar un nuevo producto"
    form(action="/productos/" method="POST" style='margin: 25px')
        label= "Nombre del producto:"
        input(type='text' name='title')
        label= "Precio:"
        input(type='number' name='price')
        label= "URL imagen:"
        input(type='text' name='img')
        button(class='btn btn-success')= "Enviar"
    div(style='margin: 25px')
        a(class='btn btn-primary' href='/productos' role='button')= "Ver lista de productos"