html
    head
        title= "Entrega - Clase 10"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
    body
        h2(style='margin: 25px')= "Lista de productos"
        if emptyData
            h5(style='margin: 25px')= "No hay productos disponibles"
            a(class='btn btn-primary' href='/' role='button' style='margin: 25px')= "Ingresar un nuevo producto"
        else     
            each producto of data
                div(class='card' style={width: '200px', margin: '25px'})
                    img(src=producto.img class='card-img-top' alt='...' style={height: '75px', width: '75px', margin: '15px'})
                    div(class='card-body')
                        h5(class='card-title')= producto.title
                        p(class='card-text')= "$" + producto.price
            a(class='btn btn-primary' href='/' role='button' style='margin: 25px')= "Ingresar un nuevo producto"